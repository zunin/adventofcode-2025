{
  "version": "2.0.0",
  "tasks": [
    {
      "type": "deno",
      "command": "run",
      "args": [
        "--watch=*.ts",
        "mod.ts"
      ],
      "problemMatcher": [
        "$deno"
      ],
      "label": "deno: run"
    },
    {
      "type": "deno",
      "command": "test",
      "args": [
        "--watch",
        "./**/test.ts"
      ],
      "problemMatcher": [
        "$deno-test"
      ],
      "group": "test",
      "label": "deno: test"
    }
  ]
}
